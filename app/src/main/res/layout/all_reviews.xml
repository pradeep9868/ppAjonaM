<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/catalog_bg"
    android:id="@+id/menu_content_frame2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:gravity="center_vertical"
                    android:background="@color/splash_background"
                    android:orientation="horizontal" >
                    <com.app.manojapp.customcomponents.TextView_White
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/back"
                        android:textSize="25sp"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:text="All Reviews"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#cccccc"/>
                <com.app.manojapp.customcomponents.PullAndLoadMore
                    android:id="@+id/review_list"
                    android:divider="@null"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent">

                </com.app.manojapp.customcomponents.PullAndLoadMore>
</LinearLayout>
    <FrameLayout
        android:id="@+id/add_review"
        android:layout_gravity="bottom|right"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle"/>
        <com.app.manojapp.customcomponents.TextView_Appcolor
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="@string/review"/>
    </FrameLayout>
</FrameLayout>